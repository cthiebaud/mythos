                        </configuration>
                    </execution>
                </executions>
            </plugin>
            -->
        </plugins>
    </build>
    <profiles>
        <!-- GitHub Pages Profile -->
        <profile>
            <id>github</id>
            <distributionManagement>
                <repository>
                    <id>github</id>
                    <url>https://maven.pkg.github.com/cthiebaud/repository</url>
                </repository>
            </distributionManagement>
        </profile>
    </profiles>
</project>